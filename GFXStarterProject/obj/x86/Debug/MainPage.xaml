<Page
    x:Class="GFXStarterProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.TopAppBar>
        <CommandBar Background="AliceBlue">
            <AppBarButton x:ConnectionId='1' Name="Textbox" Label="Add Textbox"                      >
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Candara" Glyph="Textbox"/>
                    </AppBarButton.Icon>
                </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton x:ConnectionId='2' Name="Rectangle" Label="Add Rectangle"                       Width="100">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Candara" Glyph="Rectangle"/>
                    </AppBarButton.Icon>
                </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton x:ConnectionId='3' Name="Color"  Label="Pick a color"                     Width ="100">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Candara" Glyph="Color"/>
                </AppBarButton.Icon>
                <FlyoutBase.AttachedFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:ConnectionId='8' Text="Red" Tag="Red"                          />
                        <MenuFlyoutItem x:ConnectionId='9' Text="Orange" Tag="Orange"                          />
                        <MenuFlyoutItem x:ConnectionId='10' Text="Yellow" Tag="Yellow"                           />
                        <MenuFlyoutItem x:ConnectionId='11' Text="Green" Tag="Green"                          />
                        <MenuFlyoutItem x:ConnectionId='12' Text="Blue" Tag="Blue"                          />
                        <MenuFlyoutItem x:ConnectionId='13' Text="Indigo" Tag="Indigo"                          />
                        <MenuFlyoutItem x:ConnectionId='14' Text="Violet" Tag="Violet"                          />
                        <MenuFlyoutItem x:ConnectionId='15' Text="Black" Tag="Black"                          />
                        <MenuFlyoutItem x:ConnectionId='16' Text="White" Tag="White"                          />
                        <MenuFlyoutItem x:ConnectionId='17' Text="Disable" Tag="Disable"                           />
                    </MenuFlyout>
                </FlyoutBase.AttachedFlyout>
            </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton x:ConnectionId='4' Name="Image" Tag="Add Image"  Label="Add Image"                     Width="100">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Candara" Glyph="Image"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton x:ConnectionId='5' Name="Video" Tag="Add Video"  Label="Add Video"                     Width="100">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Candara" Glyph="Video"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton x:ConnectionId='6' Name="Link" Tag="Link"  Label="Add Visual Link"                    Width="100">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Candara" Glyph="Visual Link"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton x:ConnectionId='7' Name="Trash" Icon="Delete" Tag="Trash"  Label="Delete a node"                    />
            <CommandBar.Content>
                <TextBlock Text="Toolbar" Margin="12,14"/>
            </CommandBar.Content>
        </CommandBar>
    </Page.TopAppBar>
    <Grid x:ConnectionId='18' Name ="GridView"  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
</Page>

